<div class="container">
  <% @user.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
  <% end %>
  <h2>新規ユーザー登録</h2>
  <%= form_for @user, url: users_path do |f| %>
  <p>
    ユーザー名<br>
    <%= f.text_field :name %>
  </p>
  <p>
    メールアドレス<br>
    <%= f.text_field :email %>
  </p>
  <p>
    パスワード<br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "新規登録"%>
  </p>
  <% end %>
</div>
