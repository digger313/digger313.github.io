<div class="container">
    <h2>新規投稿</h2>
    <% @post.errors.full_messages.each do |message| %>
    <div class="form-error">
    <%= message %>
    </div>
    <% end %>
<%= form_tag("/posts") do %>
<textarea name="content"><%= @post.content %></textarea>
          <input type="submit" value="投稿">
          <% end %>
</div>
